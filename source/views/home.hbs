    </ol>
    <!--/.Indicators-->

    <!--Slides-->
    <div class="carousel-inner" role="listbox">

        <!--First slide-->
        <div class="carousel-item active">

            {{#each this.products}}
            <div class="col-sm-3 mb-3" style="float:left">
                <div class="card h-100">
                    <img src="/imgs/sp/{{product_id}}/main_thumbs.jpg" alt="{{product_name}}" title="{{product_name}}"
                        class="card-img-top">
                    <div class="card-body">
                        <a href='/categories/products/{{product_id}}' class="cus_brand text-dark">
                            <h6 class="card-title text-center" style="font-family: Calibri, sans-serif;">{{product_name}}</h6>
                        </a>
                        <div class="text-center">
                            <h5 class="card-title text-danger" style="font-family: Calibri, sans-serif;">{{format price}}</h5>
                        </div>

                        {{!--  <div class="text-center">
                            <a href="#" class="genric-btn info-border">Add to Cart</a>
                        </div> --}}
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        <!--/.First slide-->

        <!--Second slide-->
        <div class="carousel-item">
            {{#each this.products}}
