<body>

   </br>
        <!-- Sign up form -->
        {{!-- <section class="signup"> --}}
    
            <div class="container">
                <div class="signup-content">
                  <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form onsubmit="return validate();"method="POST" class="frmRegister" id="frmRegister">
                            <div class="form-group">
                                <label for="txtUsername"><i class="fa fa-user"></i></label>
                                <input type="text"  name="username" id="txtUsername" placeholder="User Name" autofocus>
                            </div>

                            <div class="form-group">
                                <label for="txtPassword"><i class="fa fa-lock"></i></label>
                                <input type="password" name="raw_password" id="txtPassword" placeholder="Password" >
                            </div>
                            <div class="form-group">
                                <label for="txtConfirm"><i class="fa fa-unlock"></i></label>
                                <input type="password"  id="txtConfirm" placeholder="Repeat your password" >
                            </div>
                            <div class="form-group">
                                <label for="txtName"><i class="fa fa-user-circle"></i></label>
                                <input type="text"  name="full_name" id="txtName" placeholder="Full Name" >
                            </div>
                            <div class="form-group">
                                <label for="txtEmail"><i class="fa fa-envelope"></i></label>
                                <input type="text"  name="email" id="txtEmail" placeholder="Your Email" >
                            </div>
                            <div class="form-group">
                                <label for="txtDOB"><i class="fa fa-birthday-cake"></i></label>
                                <input type="text" id="txtDOB" name="dob">
                            </div>

                            <div class="form-group form-button">
                      
                                <button type="submit" class="form-submit btn-light">
                                Register
                                </button>
                            </div>
                            
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/img/signup-image.jpg" alt="sign up image"></figure>
                        <a href='/account/login 'class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        {{!-- </section> --}}

    </div>

</body>
