<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="single-slider slider-height2 d-flex align-items-center" data-background="/img/hero/category.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Card List</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</br>
{{#if this.empty}}
<div class="card-body">
    <p class="card-text">
        Không có dữ liệu.
    </p>
</div>
{{else}}

<div class="container">
    <div class="cart_inner">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.products}}
                    <tr>
                        <td>
                            <div class="media">
                                <div class="d-flex">
                                    <img src="/imgs/sp/{{product_id}}/main_thumbs.jpg" alt="" />
                                </div>
                                <div class="media-body">
                                    <p>{{product_name}}</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <h5>{{format price}}</h5>
                        </td>
                        <td>

                            <div style="width:150px">


                                <div class="input-group ">
                                    <div class="input-group-prepend">
                                        <a href="/checkout/update/{{product_id}}?action=minus" style="min-width:2.5rem"
                                            class="btn  btn-outline-secondary" type="button">
                                            <strong>-</strong></a>
                                    </div>
                                    <input type="text" value={{amount}} inputmode="decimal" style="text-align: center"
                                        class="form-control" />
                                    <div class="input-group-append">
                                        <a href="/checkout/update/{{product_id}}?action=plus" style="min-width: 2.5rem"
                                            class="btn btn-outline-secondary" type="button">
                                            <strong>+</strong></a>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <h5 id="subtotal">{{format sub}}</h5>

                        </td>
                    </tr>
                    {{/each}}


                </tbody>
            </table>
            


        </div>
        <div class="float-right">
        
                   {{!--  <div class="card bg-light mb-4  mr-5" style="max-width: 20rem;">
                        <div class="card-header">Mã giảm giá</div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Nhập mã ở đây.."
                                    aria-label="Mã giảm giá" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-dark" type="button">Áp dụng</button>
                                </div>
                            </div>
                        </div>
                    </div> --}}
                
                    <div class="card bg-light mb-3 " style="max-width: 20rem;">
                        <div class="card-header font-weight-bold"> Thành tiền: <a>{{format this.total}}</a></div>
                        <div class="card-body">
                            <h5 class="card-title">Tạm tính: <a>{{format this.temptotal}}</a></h5>
                            {{#if nopromo}}
                             <p class="card-text">Giảm giá: <a>-0.000</a></p>
                             {{else}}
                             <p class="card-text">Giảm giá: <a>{{this.promo}}</a></p>
                            {{/if}}


                           
                        </div>
                    </div>
                    <a  href="http://localhost:3000/checkout/confirm/{{this.order}}"  class="btn btn-dark btn-lg" style="width: 20rem;">Đặt hàng</a>

               
</div>
    </div>

</div>



{{/if}}
