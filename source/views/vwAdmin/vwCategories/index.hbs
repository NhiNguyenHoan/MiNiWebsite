<br>

<div class="card shadow">
  <h4 class="card-header">
    Categories
    <a class="btn btn-outline-secondary" href="/admin/orders" role="button">
      <i class="fa fa-list" aria-hidden="true"></i>
      orders
    </a>
  </h4>


  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">
      Không có dữ liệu.
    </p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Category</th>
        <th scope="col" class="text-right">
          {{!-- <a class="btn btn-outline-success" href="/admin/categories/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add category
          </a> --}}
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each this.categories}}
      <tr>
        <th scope="row" class="text-center">{{category_id}}</th>
        <td>{{name}}</td>
        <td class="text-right">
          {{!-- <a class="btn btn-sm btn-danger" href="/admin/categories/{{category_id}}/detail" role="button">
            <i class="fa fa-book" aria-hidden="true"></i>
          </a>
          <a class="btn btn-sm btn-primary" href="/admin/categories/{{category_id}}/edit" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a> --}}
          <a class="btn_3" href="/admin/categories/{{category_id}}/detail">
            Detail
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}

  {{!-- <div class="card-footer text-muted">
    <a class="btn btn-outline-secondary" href="/" role="button">
      <i class="fa fa-home" aria-hidden="true"></i>
      Home
    </a>
  </div> --}}
</div>

