{{#if this.empty}}
<div class="card-body">
  <p class="card-text">
    Không có dữ liệu.
  </p>
</div>
{{else}}

  <h4>Edit Product</h4>
<div class="card-inner bg-light px-5 border-top">
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtProName">Product</label>
        <input type="text" class="form-control" id="txtProdName" name="product_name" value={{product.product_name}}
          autofocus>
      </div>
      <div class="form-group">
        <label for="txtCateName">Category</label>
        <input type="text" class="form-control" id="txtProdName" name="category_id" value={{product.category_id}}
          readonly>
      </div>
      <div class="form-group">
        <label for="txtPrice">Price</label>
        <input type="text" class="form-control" id="txtPrice" name="price" value={{price}}>
      </div>
      <div class="form-group">
        <label for="txtDese">Description</label>
        <input type="text" class="form-control" id="txtDes" name="description" value={{description}}>
      </div>
      <a class="btn btn-outline-primary" href="/admin/categories" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        category
      </a>
      <button type="submit" class="btn btn-outline-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
  </div>
</div>
{{/if}}



